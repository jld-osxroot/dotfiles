function extract() {
  if [[ $# -eq 1 ]]; then
    if [[ -f $1 ]]; then
      case "$1" in
        *.bz2)
          bunzip2 $1
          ;;
        *.gz)
          gunzip $1
          ;;
        *.tar)
          tar xvf $1
          ;;
        *.tar.bz2|*.tbz2)
          tar xvjf $1
          ;;
        *.tar.gz|*.tgz)
          tar xvzf $1
          ;;
        *.zip)
          unzip $1
          ;;
        *)
          echo -e "Unable to uncompress file '$1' because of unsupported format"
          ;;
      esac
    else
      echo -e "Unable to uncompress missing file '$1'"
    fi
  else
    echo "Usage: extract <file>" >&2
  fi
}


